<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.ModelZcSoftvera" table="ModelZcSoftvera">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="oznaka" unique="true" not-null="true">
			<column name="oznaka" unique="true" not-null="true" />
		</property>
		<property name="naziv">
			<column name="naziv" />
		</property>
		<property name="skraceniNaziv">
			<column name="skraceniNaziv" />
		</property>
		<property name="opis">
			<column name="opis" />
		</property>
	</class>
</hibernate-mapping>